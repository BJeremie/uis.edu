<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            width: 40%;
            padding: 2%;
        }
        
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }
        
        .container {
            padding: 90px 16px;
        }
    </style>
</head>
<div class="container">

    <h3>Add Restaurant</h3>

    <div class="form-group">
        <form method="post" action="/reviewed/add">
            <!--NAME-->
            <label for="name">Name:</label>
            <input class="form-control" type="text" name="name" placeholder="Add Name">
            <!-- EMAIL-->
            <label for="email">Email:</label>
            <input class="form-control" type="text" name="email" placeholder="Add Email">
            <!--Food Type-->
            <label for="email">Food Type:</label>
            <input class="form-control" type="text" name="foodType" placeholder="Food Type">
            <!--Phone Number-->
            <label for="Phone">Phone Number:</label>
            <input class="form-control" type="text" name="phone" placeholder="Phone Number">
            <!--Website-->
            <label for="email">Website:</label>
            <input class="form-control" type="text" name="website" placeholder="Website">

            <!--Submit-->
            <input type="submit" class="btn btn-primary" value="submit">
        </form>
    </div>



    <h1>Reviews</h1>


    <% customers.forEach(function(customer){ %>


        <div class="card">

            <h4>
                Name:
                <%= customer.value.name %>
            </h4>
            <p>
                Email:
                <%= customer.value.email %>
            </p>

            <p>
                Food Type:
                <%= customer.value.food %>
            </p>
            <p>
                Phone:
                <%= customer.value.phone %>
            </p>

            <p>
                Website:
                <%= customer.value.website %>
            </p>

            <div style="float:left">
                <form method="post" action="/reviewed/delete/<%= customer.key %>">
                    <input type="hidden" value="<%= customer.value.rev %>" name="rev">
                    <input onClick="return confirm('Are you sure you want to delete?')" type="submit" value="Remove X">
                </form>
                <a href='/edit/<%= customer.id %>' type="button" title="Edit User">Edit</a>


            </div>
        </div>

        <%}); %>
</div>